<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.asus.cchat.PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:hint="Write your phone number"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:drawableStart="@drawable/phone"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/phone" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/inputs"
        android:layout_below="@+id/phone_number_input"
        android:padding="5dp"
        android:hint="write verification"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:visibility="invisible"
        android:drawableStart="@drawable/password"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/password" />
    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification"
        android:textAllCaps="false"
        android:layout_below="@+id/verification_code_input"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/buttons"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_below="@+id/send_ver_code_button"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/buttons"
        android:textSize="13dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@android:color/background_light"
        />
</RelativeLayout>
